<!-- bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- menubar -->
<nav class="navbar navbar-expand navbar-light bg-light">
  <div class="container-fluid">
    <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
      <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" href="/">
            Home
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/shop">
            Products
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/add-new">
            Add product
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<!-- content -->
<div class="bg-dark container-fluid text-center">
  <div class="container mx-auto p-3">
    <h1 class="text-dark py-3 bg-light mb-4 fs-2 rounded-3">
      <%= product.title %>
    </h1>
    <img src="../images/<%= product.imageURL %>" alt="A Book" class="img-fluid img-thumbnail" style="max-width: 500px;">
    <h2 class="text-light pt-4 pb-2">
      <%= (product.price).toLocaleString('en-US', { style: 'currency' , currency: 'USD' , }); %>
    </h2>
    <p class="text-light fs-3 pb-5">
      <%= product.description %>
    </p>
  </div>
</div>