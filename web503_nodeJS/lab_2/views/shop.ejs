<!-- bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- menubar -->
<nav class="navbar navbar-expand navbar-light bg-light">
  <div class="container-fluid">
    <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
      <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" href="/">
            Home
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/shop">
            Products
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/add-new">
            Add product
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<!-- content -->
<div class="container-fluid py-5 bg-dark">
  <div class="container">

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
      <% for (let product of products) { %>
      <div class="col">
        <div class="card text-center">
          <div class="card-header">
            <h4 class="pt-2 pb-0 fs-6 overflow-hidden text-truncate text-nowrap">
              <a href="/detail/<%= product.id %>">
                <%= product.title %>
              </a>
            </h4>
          </div>
          <div class="card-body pb-0 pt-2">
            <img src="images/<%= product.imageURL %>" alt="A Book" class="img-fluid img-thumbnail"
              style="width: 150px; height: 220px;">
            <h5 class="mt-2 py-2 bg-light text-success">
              <%= 
                (product.price).toLocaleString('en-US', {
                  style: 'currency',
                  currency: 'USD',
                });
              %>
            </h5>
            <p class="text-dark overflow-hidden text-truncate text-wrap" style="
              -webkit-line-clamp: 3;
              -webkit-box-orient: vertical;
              display: -webkit-box;
            ">
              <%= product.description %>
            </p>
          </div>
          <div class="card-footer">
            <button class="btn btn-success w-100">Select</button>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>