<!-- bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<!-- font awsome -->
<script src="https://kit.fontawesome.com/aeb1173b82.js" crossorigin="anonymous"></script>
<style>
  .table>*>*>* {
  line-height: 2.34rem;
}
</style>

<div class="container-fluid bg-dark py-5 h-100">
  <div class="container bg-white">
    <table class="table table-borderless table-striped table-hover">
      <tr class="table-primary">
        <th>ID</th>
        <th>Category name</th>
        <th>Order</th>
        <th>Display</th>
        <th>
          <a href="/category/add">
            <button type="button" class="btn btn-success">
              Add category
            </button>
          </a>
        </th>
      </tr>
      <% categoryList.forEach(category => { %>
      <tr>
        <td><%= category.PkCategory_Id %> </td>
        <td><%= category.CategoryName %> </td>
        <td><%= category.CategoryOrder %> </td>
        <td>
          <%= 
          category.CategoryDisplay === 1 ? 
            'Show' : 
            'Hide'
        %>
        </td>
        <td>
          <a href="/category/delete/<%= category.PkCategory_Id %>" class="text-decoration-none">
            <button type="button" class="btn btn-danger">
              <i class="far fa-trash-alt"></i>
            </button>
          </a>
          <a href="/category/edit/<%= category.PkCategory_Id %>" class="text-decoration-none">
            <button class="btn btn-warning text-light">
              <i class="far fa-file-alt"></i>
            </button>
          </a>
        </td>
      </tr>
      <% }) %>
  </div>
</div>