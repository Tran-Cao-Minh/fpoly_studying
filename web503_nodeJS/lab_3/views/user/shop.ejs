<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TCM Bookstore</title>
  <!-- bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>
  <!-- css -->
  <link rel="stylesheet" href="<%= getFolderParent %>css/change-bootstrap-color.css">
  <link rel="stylesheet" href="<%= getFolderParent %>css/font.css">
</head>

<body>
  <div class="container-fluid">
    <header class="row bg-primary font-monospace text-white pt-3 pb-2 text-center">
      <h1 class="fs-3">
        Tran Cao Minh
      </h1>
    </header>
    <nav class="row navbar navbar-expand-lg navbar-light bg-light">
      <div class="container col col-lg-11 col-xl-10 col-xxl-9">
        <a class="navbar-brand text-primary font-logo" href="#">TCM Bookstore</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" href="/">Home</a>
            </li>
            <% typeList.forEach(type => { %>
            <li class="nav-item">
              <a class="nav-link" href="/type/<%= type.PkType_Id %>"><%= type.TypeName %></a>
            </li>
            <% }) %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdowna" role="button" data-bs-toggle="dropdown"
                aria-expanded="false">
                Account
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item" href="#">Log In</a></li>
                <li><a class="dropdown-item" href="#">Forget Password</a></li>
                <li>
                  <hr class="dropdown-divider">
                </li>
                <li><a class="dropdown-item" href="#">Sign Up</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <main class="row">
      <%- include('productList') %>
    </main>

    <footer class="row bg-primary text-light">
      <div class="container pt-3 pb-4 d-flex justify-content-center flex-wrap col col-lg-11 col-xl-10 col-xxl-9">
        <div class="col-12 col-md-6 col-lg-4 text-center mb-2">
          <h5 class="mb-3 mt-4">Support</h5>
          <a class="d-block py-2 text-decoration-none text-white" href="#">
            Return policy
          </a>
          <a class="d-block py-2 text-decoration-none text-white" href="#">
            Security policy
          </a>
          <a class="d-block py-2 text-decoration-none text-white" href="#">
            Payment policy
          </a>
        </div>
        <div class="col-12 col-md-6 col-lg-4 text-center mb-2">
          <h5 class="mb-3 mt-4">Connect</h5>
          <a class="d-block py-2 text-decoration-none text-white" href="#">
            Facebook
          </a>
          <a class="d-block py-2 text-decoration-none text-white" href="#">
            Youtube
          </a>
          <a class="d-block py-2 text-decoration-none text-white" href="#">
            Twitter
          </a>
        </div>
        <div class="col-12 col-md-6 col-lg-4 text-center mb-2">
          <h5 class="mb-3 mt-4">Contact</h5>
          <a class="d-block py-2 text-decoration-none text-white" href="#">
            Azusa New York 3030
          </a>
          <a class="d-block py-2 text-decoration-none text-white" href="#">
            033.333.0303
          </a>
          <a class="d-block py-2 text-decoration-none text-white" href="#">
            tcm@bookstore.com
          </a>
        </div>
      </div>
    </footer>
  </div>
</body>

</html>