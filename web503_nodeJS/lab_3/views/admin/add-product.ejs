<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TCM Bookstore</title>
  <!-- bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
  <!-- css -->
  <link rel="stylesheet" href="../css/change-bootstrap-color.css">
  <link rel="stylesheet" href="../css/font.css">
</head>

<body>
  <div class="container-fluid">
    <header class="row bg-primary font-monospace text-white pt-3 pb-2 text-center">
      <h1 class="fs-3">
        Manage Website
      </h1>
    </header>
    <nav class="row navbar navbar-expand-lg navbar-light bg-light">
      <div class="container col col-lg-11 col-xl-10 col-xxl-9">
        <a class="navbar-brand text-primary font-logo" href="#">TCM Bookstore</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/admin">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/admin/add-product">Add Product</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/">Back to Website</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <main class="row bg-dark py-4">
      <form action="/admin/add-product" method="post" enctype="multipart/form-data"
        class="bg-light col-12 col-sm-11 col-md-9 col-lg-8 col-xl-7 col-xxl-6 rounded-2 pt-4 px-3 pb-3 m-auto">
        <h4 class="text-center text-uppercase mb-3">
          Add product
        </h4>
        <div class="form-group">
          <label class="mb-1">Product type</label>
          <select class="form-select mb-3" name="productType">
            <% typeList.forEach(type => { %>
              <option value="<%= type.PkType_Id %>">
                <%= type.TypeName %> 
              </option>
            <% }) %>
          </select>
        </div>
        <div class="form-group">
          <label class="mb-1" for="productName">Product name</label>
          <input required type="text" maxlength="200" class="form-control mb-3" id="productName" name="productName">
        </div>
        <div class="form-group">
          <label class="mb-1" for="productPrice">Product price ($)</label>
          <input required type="number" min="0" max="100000" step="0.01" class="form-control mb-3" id="productPrice"
            name="productPrice">
        </div>
        <div class="form-group">
          <label class="mb-1" for="productDescription">Product description</label>
          <textarea required rows="5" class="form-control mb-3" id="productDescription"
            name="productDescription" maxlength="2000"></textarea>
        </div>
        <div class="form-group">
          <label class="mb-1" for="productImage">Product image</label>
          <input required accept="image/*" type="file" class="form-control mb-3" id="productImage" name="productImage">
        </div>
        <div class="form-group">
          <label class="mb-1">Product display</label>
          <select class="form-select mb-3" name="productDisplay">
            <option value="0">Hide</option>
            <option value="1" selected>Show</option>
          </select>
        </div>
        <div class="form-group mt-4">
          <button class="btn btn-success py-2 px-4 w-100 text-uppercase">
            Add product
          </button>
        </div>
      </form>
    </main>
    <footer class="row bg-primary text-light">
      <div class="container pt-5 pb-5 col col-lg-11 col-xl-10 col-xxl-9">
        <h5 class="mt-2 text-center">
          Â© 2022 All Rights Reserved By&nbsp;Tran&nbsp;Cao&nbsp;Minh
        </h5>
      </div>
    </footer>
  </div>
</body>

</html>