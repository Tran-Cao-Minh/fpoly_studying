<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TCM Bookstore</title>
  <%- include('./module/general-link.ejs') %>
</head>

<body>
  <div class="container-fluid">
    <%- include('./module/header.ejs') %>
    <%- include('./module/nav-bar.ejs') %>

    <main class="row bg-dark py-4">
      <form action="/admin/add-product" method="post" enctype="multipart/form-data"
        class="bg-light col-12 col-sm-11 col-md-9 col-lg-8 col-xl-7 col-xxl-6 rounded-2 pt-4 px-3 pb-3 m-auto">
        <h4 class="text-center text-uppercase mb-3">
          Add product
        </h4>
        <div class="form-group">
          <label class="mb-1">Product type</label>
          <select class="form-select mb-3" name="productType">
            <% typeList.forEach(type => { %>
            <option value="<%= type.PkType_Id %>">
              <%= type.TypeName %>
            </option>
            <% }) %>
          </select>
        </div>
        <div class="form-group">
          <label class="mb-1" for="productName">Product name</label>
          <input required type="text" maxlength="200" class="form-control mb-3" id="productName" name="productName">
        </div>
        <div class="form-group">
          <label class="mb-1" for="productImage">Product image</label>
          <input required accept="image/*" type="file" class="form-control mb-3" id="productImage" name="productImage">
        </div>
        <div class="form-group">
          <label class="mb-1" for="productPrice">Product price ($)</label>
          <input required type="number" min="0" max="100000" step="0.01" class="form-control mb-3" id="productPrice"
            name="productPrice">
        </div>
        <div class="form-group">
          <label class="mb-1" for="productDescription">Product description</label>
          <textarea required rows="5" class="form-control mb-3" id="productDescription" name="productDescription"
            maxlength="2000"></textarea>
        </div>
        <div class="form-group">
          <label class="mb-1" for="productPublisher">Product publisher</label>
          <input required type="text" maxlength="200" class="form-control mb-3" id="productPublisher" name="productPublisher">
        </div>
        <div class="form-group">
          <label class="mb-1" for="productPublishDate">Product publish date</label>
          <input required type="date" class="form-control mb-3" id="productPublishDate" name="productPublishDate">
        </div>
        <div class="form-group">
          <label class="mb-1" for="productDimensions">Product dimensions</label>
          <input required type="text" maxlength="100" class="form-control mb-3" id="productDimensions" name="productDimensions">
        </div>
        <div class="form-group">
          <label class="mb-1" for="productPages">Product pages</label>
          <input required type="number" min="1" max="99999" step="0.01" class="form-control mb-3" id="productPages"
            name="productPages">
        </div>
        <div class="form-group">
          <label class="mb-1">Product display</label>
          <select class="form-select mb-3" name="productDisplay">
            <option value="0">Hide</option>
            <option value="1" selected>Show</option>
          </select>
        </div>
        <div class="form-group mt-4">
          <button class="btn btn-success py-2 px-4 w-100 text-uppercase">
            Add product
          </button>
        </div>
      </form>
    </main>

    <%- include('./module/footer.ejs') %>
  </div>
</body>

</html>