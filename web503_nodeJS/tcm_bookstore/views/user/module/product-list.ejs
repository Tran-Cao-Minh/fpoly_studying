<div class="container-fluid py-5 bg-dark">
  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g-3">
      <% productList.forEach(product => { %>
      <div class="col">
        <div class="card text-center">
          <div class="card-header py-1">
            <img src="<%= getFolderParent %>images/<%= product.ProductImage %>" alt="A Book"
              class="img-fluid img-thumbnail" style="width: 140px; height: 200px;">
          </div>
          <div class="card-body py-0">
            <h4 class="pt-2 pb-0 fs-6 overflow-hidden text-truncate text-nowrap">
              <a class="text-decoration-none text-dark" href="#">
                <%= product.ProductName %>
              </a>
            </h4>
            <h5 class="mt-2 fs-6 py-2 bg-light text-success">
              <%= 
                  (product.ProductPrice).toLocaleString('en-US', {
                    style: 'currency',
                    currency: 'USD',
                  });
                %>
            </h5>
          </div>
          <div class="card-footer p-0">
            <button class="btn btn-primary w-100">Select</button>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>