<!DOCTYPE html>
<html lang="en">

<head>
  <!-- bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <!-- bootstrap validate -->
  <script src="../javascripts/bootstrap-validate.js"></script>

  <%- include('../module/website-info.ejs') %>
  <%- include('../module/general-link.ejs') %>

  <link rel="stylesheet" href="/stylesheets/client/shop.css">
</head>

<body>
  <%- include('../module/header.ejs') %>

  <section id="content">
    <form method="POST" action="http://localhost:3000/user/get-new/password"
      id="changePasswordForm" class="bg-white col-12 col-sm-11 col-md-9 col-lg-8 col-xl-7 col-xxl-6 rounded-2 pt-4 px-3 pb-3 m-auto">
      <h4 class="text-center text-uppercase mb-3">
        Get password in your email
      </h4>
      <div class="form-group mb-3">
        <label class="mb-1" for="userEmail">Your email</label>
        <input required type="text" maxlength="201" class="form-control js-bootstrap-validate" id="userEmail"
          name="userEmail" pattern="^[a-z][a-z0-9_\.]{4,32}@{1}[a-z0-9]{2,}(\.[a-z0-9]{2,4}){1,2}$">
        <div class="invalid-feedback">
          Please fill this input with right Email format
        </div>
      </div>
      <div class="form-group mt-4">
        <button class="btn btn-success py-2 px-4 w-100 text-uppercase">
          Confirm
        </button>
        <% if (typeof(notification) !== 'undefined') { %>
          <div class="text-danger text-center pt-3 pb-0 text-uppercase">
            <%= notification %> 
          </div>
        <% } %>
      </div>
    </form>
  </section>

  <%- include('../module/footer.ejs') %>

  <script type="module" src="/javascripts/client/shop/shop.js"></script>
</body>

</html>