<!DOCTYPE html>
<html lang="en">

<head>
  <!-- bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <%- include('../module/website-info.ejs') %>
  <%- include('../module/general-link.ejs') %>

  <link rel="stylesheet" href="/stylesheets/client/shop.css">
</head>

<body>
  <%- include('../module/header.ejs') %>

  <section id="content">
    <form method="POST" action="http://localhost:3000/user/check-login" id="loginForm"
      class="bg-white col-12 col-sm-11 col-md-9 col-lg-8 col-xl-7 col-xxl-6 rounded-2"
      style="margin: 0 auto; padding: 1.5rem 0.75rem 0.25rem;">
      <h4 class="text-center text-uppercase mb-3">
        Login
      </h4>
      <div class="form-group mb-3">
        <label class="mb-1" for="userName">User name</label>
        <input required type="text" maxlength="201" class="form-control js-bootstrap-validate" id="userName"
          name="userName" pattern="^([A-Za-z0-9]{1})([\w\s&apos;&quot;:,.&+|-]{4,199})$"
          <% if (typeof(userName) !== 'undefined') { %> value="<%= userName %>" <% } %>>
        <div class="invalid-feedback">
          Please fill this input that is start with alphanumeric,
          between 5 to 200 characters and contains only alphanumeric
          or underscore or some specials characters include , ' " : - ; _ + . |
        </div>
      </div>
      <div class="form-group mb-3">
        <label class="mb-1" for="userPassword">User password</label>
        <input required type="text" maxlength="201" class="form-control js-bootstrap-validate" id="userPassword"
          name="userPassword" pattern="^([A-Za-z0-9]{1})([\w\s&apos;&quot;:,.&+|-]{4,199})$"
          <% if (typeof(userPassword) !== 'undefined') { %> value="<%= userPassword %>" <% } %>>
        <div class="invalid-feedback">
          Please fill this input that is start with alphanumeric,
          between 5 to 200 characters and contains only alphanumeric
          or underscore or some specials characters include , ' " : - ; _ + . |
        </div>
      </div>
      <div class="form-group mt-2">
        <div style="display: flex; justify-content: space-between;">
          <div class="col-5">
            <button class="btn btn-success py-2 px-4 w-full text-uppercase">
              Login
            </button>
          </div>
          <div class="col-5">
            <a href="/forget-password" class="btn btn-primary py-2 px-4 w-full text-uppercase">
              Forget password
            </a>
          </div>
        </div>
        <% if (typeof(notification) !== 'undefined') { %>
        <div class="text-danger text-center mt-4 text-uppercase">
          <%= notification %>
        </div>
        <% } %>
      </div>
    </form>
  </section>

  <%- include('../module/footer.ejs') %>

  <script type="module" src="/javascripts/client/shop/shop.js"></script>

  <!-- bootstrap validate -->
  <script src="./javascripts/bootstrap-validate.js"></script>
</body>

</html>