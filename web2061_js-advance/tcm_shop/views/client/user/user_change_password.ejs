<!DOCTYPE html>
<html lang="en">

<head>
  <!-- bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <%- include('../module/website-info.ejs') %>
  <%- include('../module/general-link.ejs') %>

  <link rel="stylesheet" href="/stylesheets/client/shop.css">

  <!-- bootstrap validate -->
  <script src="../javascripts/bootstrap-validate.js"></script>
</head>

<body>
  <%- include('../module/header.ejs') %>

  <section id="content">
    <form method="GET" action="http://localhost:3000/user/update/password"
      id="changePasswordForm" class="bg-white col-12 col-sm-11 col-md-9 col-lg-8 col-xl-7 col-xxl-6 rounded-2 pt-4 px-3 pb-3 m-auto">
      <h4 class="text-center text-uppercase mb-3">
        Change Password
      </h4>
      <div class="form-group mb-3">
        <label class="mb-1" for="userPassword">Your new password</label>
        <input required type="text" maxlength="201" class="form-control js-bootstrap-validate" id="userPassword"
          name="userPassword" pattern="^([A-Za-z0-9]{1})([\w\s&apos;&quot;:,.&+|-]{4,199})$">
        <div class="invalid-feedback">
          Please fill this input that is start with alphanumeric,
          between 5 to 200 characters and contains only alphanumeric
          or underscore or some specials characters include , ' " : - ; _ + . |
        </div>
      </div>
      <div class="form-group mt-4">
        <button class="btn btn-success py-2 px-4 w-100 text-uppercase">
          Confirm
        </button>
      </div>
    </form>
  </section>

  <%- include('../module/footer.ejs') %>

  <script type="module" src="/javascripts/client/shop/shop.js"></script>
</body>

</html>